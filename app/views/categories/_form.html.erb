<% form_for @category do |f| %>
  <%= f.error_messages %>
  <div class="language">
	 <h2>English</h2>
		<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
		</div>
  </div>
	<div class="language">
	    <h2>Chinese</h2>
	    <%= f.globalize_fields_for(:cn) do |g| %>
	      <div class="field">
	        <%= g.label :name %><br />
	        <%= g.text_field :name %>
	      </div>
	    <% end %>
	</div>
	<p><%= f.label :parent_id, "Parent Category" %><%= f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.name}" }, :prompt => "NONE: Make This A Root Category" %> <br />
		<small>NOTE: Leaving the above field blank makes it a root category</small>
	</p>



  <p><%= f.submit %></p>
<% end %>
