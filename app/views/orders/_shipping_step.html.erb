<p>
  <%= f.hidden_field :cart_id, :value => current_cart.id %>

  <%= f.input :first_name %>

  <%= f.input :last_name %>

  <%= f.input :street %>

  <%= f.input :house_nr, :size => 5 %>

  <%= f.input :zipcode	 %>

  <%= f.input :city %>

	<div class="input string optional">
	  <label for="order_card_type" class="select"> Country</label>
      <% countries_array = Country.all.map { |country| [country.name, country.id] } %>
	  <%= f.select :country, options_from_collection_for_select(Country.all, 'iso', 'name', session[:order_params]["country"] ? session[:order_params]["country"] : "United Kingdom") %>
	</div>
	
	
  <%= f.input :shipping_method_id, :collection => ShippingMethod.all, :as => :radio, :label_method => :name_and_price, :checked => session[:order_params]["shipping_method_id"] ? session[:order_params]["shipping_method_id"].to_i : 1%>  

</p>
