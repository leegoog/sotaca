<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? "Sotaca 1898 - #{yield(:title)}" : "Sotaca 1898" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults, "nested_form"  %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
	<div id="container">
		<% if can? :update, [Product] %>
		<div class="admin_panel">
			<a id="admin_button" href="#">Admin Panel</a>
			<div id="admin_pane">
				<div class="admin_group">
					<h3>Products</h3>
					<ul>
						<li><%= link_to "add product" %></li>
						<li><%= link_to "categories" %> </li>
						<li><%= link_to "offers" %></li>
					</ul>
				</div>
				<div class="admin_group">
					<h3>Clients</h3>
					<ul>
						<li>link1</li>
						<li>link2</li>
						<li>link3</li>
					</ul>
				</div>
				<div class="admin_group">
					<h3>Orders</h3>
					<ul>
						<li>link1</li>
						<li>link2</li>
						<li>link3</li>
					</ul>
				</div>
			</div>
		</div>
		<br class="clear">
		<% end %>
	  <div class="header">
	  	
	  	<div class="top">
	  	
	  		<div id="logo">		
	  			<%= image_tag ('logo.jpg') %>
	  		</div>
			<br/>
	  		<div id="languages">
	  			<ul>
	  				<li><a href="#">chinese</a></li>
	  				<li><a href="#">english</a></li>
	  			</ul>
	  		</div>
	  	
	  	</div>
	  	<div class="middle">
	  		<div id="login_menu">
	  			<% if user_signed_in? %>  
		        <%= link_to current_user.username, home_url %> |  
		        <%= link_to "Log out", destroy_user_session_path %>  
		      <% else %>  
				<%= link_to "Log in", new_user_session_path %> or  
		        <%= link_to "Register", new_user_registration_path %>  
		      <% end %>
	  				
	  		</div>
	  		<div id="cart_menu">
	  			<ul>
	  				<li>
					<%= image_tag("cart.jpg")%>
					</li>
					<li>
					<%= link_to "#{current_cart.number_of_items}", current_cart_url %>
					
					</li>
	  				<li><a href="/checkout/">Checkout</a></li>
	  			</ul>
	  		</div>
	  	</div>
	  	<div id="main_navi">
	  		<ul>
	  			<li class="<%= "active" if (params[:controller] == "pages" && params[:action] == "home") %>"><a href="/home/">Home</a></li>
	  			<li class="<%= "active" if (params[:controller] == "pages" && params[:action] == "just_in") %>"><a href="/just_in/">Just in</a></li>
	  			<li class="<%= "active" if params[:controller] == "products"%>"><a href="/products/">Shop</a></li>
	  			<li class="<%= "active" if (params[:controller] == "pages" && params[:action] == "info") %>"><a href="/info/">Info</a></li>
	  			<li class="<%= "active" if (params[:controller] == "pages" && params[:action] == "our_story") %>"><a href="/our_story/">Our Story</a></li>
				<li id="search_field">
					
		
				<% form_tag products_path, :action => "index", :method => "GET" do -%>
				  <%= text_field_tag :title %>
				  <%=  image_submit_tag("search.png", :id => "search", :name => "search", :class => "search-button", :disabled => false) %>
				<%  end -%>

					
	  		</ul>
	  	</div>
	  	
	  </div>
	  
	  <div id="content">
		<div id="left">
			<%= yield(:left) %>
		</div>
	    <% flash.each do |name, msg| %>
	      <%= content_tag :div, msg, :id => "flash_#{name}" %>
	    <% end %>
	    <% # content_tag :h1, yield(:title) if show_title? %>
	    <%= yield %>
	  </div>
	  <div class="footer">
		<ul>
			<li><a href="/contact/">contact us</a></li>
			<li><a href="/terms/">terms</a></li>
			<li><a href="/press/">press</a></li>
			<li><a href="/whole_sale/">whole sale</a></li>
			<li><a href="/blog/">blog</a></li>						
	</div>
	<br/><br/>
  </body>
</html>
