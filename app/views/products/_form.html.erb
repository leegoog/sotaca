<%= form_for @product do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>   
 
  <%= f.fields_for :images do |builder| %> 
		<p>
			<%= builder.label :title, "Image Title"%> 
			<%= builder.text_field :title %>
		</p>
  <% end %>
   
	
  <p><%= f.submit %></p>
<% end %>
