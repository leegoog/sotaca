<div class="product">
	<div class="image">
		<% product.assets.each do |asset| %>
			<%= link_to(image_tag(asset.image.url(:thumb)), product) %>
		<% end %>
    </div> 
  <%= link_to product.title,  product, :class => "title_link"%>
  <span class="product_price"><%= number_to_currency(product.price, :unit => '&pound;', :format => "%u%n") %></span>
</div>