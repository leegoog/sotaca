<% form_for @social_share, :url => { :controller => "products", :action => "share_by_mail" }, :html => { :method => :post } do |f| %>

<table border="0" cellspacing="5" cellpadding="5">
	<tr>
		<td class="label"><%= f.label t"contact.name" %>*</td>
		<td class="input"><%= f.text_field :sender_name, :value => current_user ? current_user.username : nil %></td>
	</tr>
	<tr>
		<td class="label"><%= f.label t"contact.email" %>*</td>
		<td class="input">
			<%= f.text_field :sender_email, :value => current_user ? current_user.email : nil  %>
		</td>
	</tr>
	
	<tr>
		<td class="label"><%= f.label "Receiver Name" %>*</td>
		<td class="input"><%= f.text_field :name %></td>
	</tr>
	<tr>
		<td class="label"><%= f.label "Receiver EMail" %>*</td>
		<td class="input">
			<%= f.text_field :email %>
		</td>
	</tr>	
	
	<tr>
		<td class="label"><%= f.label t"contact.message" %>*</td>
		<td class="input"><%= f.text_area :message %></td>
	</tr>
	<tr>
		<td class="label"></td>
		<td class="input small"><%= f.submit "Submit" %></td>
	</tr>
</table>

<% end %>